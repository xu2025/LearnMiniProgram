<!--pages/scroll/scroll.wxml-->
<!--1.水平滚动 scroll:x true-->
<!--view是块内元素，独占一行-->

<scroll-view class='container1' scroll-x:>
  <view wx:for="{{10}}" wx:key="key" class="item1">{{item}}</view>
</scroll-view>

<!--2.垂直滚动 scroll:y true-->
<scroll-view class='container2' scroll-y>
  <view wx:for="{{10}}" wx:key="key" class="item2">{{item}}</view>
</scroll-view>

<!--3.其他属性的补充-->
<scroll-view class='container2' 
            scroll-y
            bindscroll="handleScroll">
  <view wx:for="{{10}}" wx:key="key" class="item2">{{item}}</view>
</scroll-view>